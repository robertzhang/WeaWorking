<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
     <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        
    </style>

   
    <style name="AppTheme" parent="AppBaseTheme">
       
    </style> 
    
    <style name="AddTaskAnimationTheme">
        <item name="android:windowAnimationStyle">@style/AddTaskAnimation</item>  
    </style>
    
    <style name="AddTaskAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/add_task_slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/add_task_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/add_task_slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/add_task_slide_out_right</item>
    </style>
    

</resources>
